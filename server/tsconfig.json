{
    "compilerOptions": {
        "target": "ESNext",                   
        "module": "ESNext",                 
        "strict": true,                       // strict type checking
        "esModuleInterop": true,              // compatible with ES module
        "moduleResolution": "Node",         // to 
        "forceConsistentCasingInFileNames": true, // keep letter case
        // "skipLibCheck": true,                 // type checking
        "outDir": "./dist",                   // dist path
        "rootDir": "./src",                   // source path
        // "resolveJsonModule": true,             // import json
        "allowImportingTsExtensions":true,      // to use ESM
        "emitDeclarationOnly": true,
        "composite": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm":true, // use ESM
    },
    "include": [
        "src/**/*",
        // "src/global.d.ts",
        "environment.d.ts"
    ],
    // "files": ["src/global.d.ts"],
    "exclude": [
        "node_modules",
    ]
}
  
